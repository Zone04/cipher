#!/bin/bash

print_usage() {
  echo "Usage: $0 [-x] CIPHERED_FOLDERS_AND_FILES" >&2
}

extract=false

while getopts 'x' flag; do
  case "${flag}" in
    x) extract=true ;;
    *) print_usage
       exit 1 ;;
  esac
done

shift $(($OPTIND - 1))

if [ "$#" -eq 0 ]; then
  print_usage
  exit 1
fi

for f in "$@"; do
  if [ ! -f "$f" ]; then
    echo "Not a file: $f" >&2
    exit 1
  fi

  echo "Deciphering $f" >&2
  if [[ "$f" == *.tar.gz.gpg ]] && [[ $extract == true ]]; then
    gpg -d 2>/dev/null <(pv "$f") | tar -xz
  else
    gpg -d 2>/dev/null -o "$(basename "${f%.gpg}")" <(pv "$f")
  fi
done
